<div class="mx-auto">
  <h1 class="text-center font-weigth-bold text-info">Productos - EJS</h1>
</div>
<div class="container">
    {{#if existProducts }}
        <table class="table table-dark">
            <caption>List of products</caption>
            <thead>
                <tr>
                    <th class="text-center">Nombre</th>
                    <th class="text-center">Precio</th>
                    <th class="text-center">Imagen</th>
                </tr>
            </thead>
            <tbody>
                {{#each productos }}
                    <tr>
                        <td class="text-center align-middle">{{ this.title }}</td>
                        <td class="text-center align-middle">{{ this.price }}</td>
                        <td>
                            <img class="mx-auto d-block" style="height: 100px;" alt="imagen de producto" src={{this.thumbnail}}>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    {{else}}
        <div class="bg-danger px-2 py-3">
            <p class="m-0 font-weight-bold text-light h2">No hay productos</p>
        </div>
    {{/if}}
    <a href="/">Ir a formulario</a>
</div>
